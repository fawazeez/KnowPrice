<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="@dimen/category_card_width"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="@dimen/category_card_corner"
    android:layout_marginBottom="@dimen/list_padding">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/catImageView"
            android:layout_width="@dimen/category_card_width"
            android:layout_height="@dimen/category_card_width"
            tools:src="@drawable/ic_logo"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/categoryTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:fontFamily="sans-serif-condensed"
            android:textAppearance="?android:textAppearanceMedium"
            android:text="@string/Loading"
            android:textColor="@color/primary_text"
            android:gravity="center_horizontal"
            android:layout_below="@+id/catImageView"
            android:paddingBottom="@dimen/list_padding"
            android:layout_alignParentBottom="true"
            android:background="@drawable/border"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>